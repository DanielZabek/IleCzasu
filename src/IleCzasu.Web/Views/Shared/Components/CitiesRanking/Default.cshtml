@model List<City>
    <h2>MIASTA</h2>
   
    <table class="ranking-table">
        <tr class="ranking-header">
            <th style="width:10px;text-align:center; padding:0"></th>
            <th style="border-left: 1px solid #231d1d;width:80%;border-right: 1px solid #231d1d; padding-left: 5px;">
                MIASTO
            </th>
            <th style="width:30px;text-align:center">
                WYD.
            </th>
        </tr>
       
        @{
            int i = 1;
            foreach (var c in Model)
            {

            <tr class="ranking-row">
                @switch (i)
                {
                    case 1:
                        <td style="width:10px;text-align:center; padding:0"><i class="fas fa-trophy" style="color:#E0A22F"></i></td>
                        break;
                    case 2:
                        <td style="width:10px;text-align:center; padding:0"><i class="fas fa-trophy" style="color:#C0C0C0"></i></td>
                                break;
                            case 3: 
                        <td style="width:10px;text-align:center; padding:0"><i class="fas fa-trophy" style="color:#cd7f32"></i></td>
                        break;
                    default:
                        <td style="width:10px;text-align:center; padding:0">@i</td>
                        break;

                }
             
                <td style="width:80%;border-left: 1px solid #231d1d; border-right: 1px solid #231d1d; color:#E0A22F;padding-left: 5px;">@c.Name</td>
                <td style="width:30px;text-align:center">@c.NumberOfEvents</td>
            </tr>

                i++;
                    }
                }

    </table>